name:                yiyd
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/VonFry/yiyd
license:             GPL-3
license-file:        LICENSE
author:              Vonfry
maintainer:          vonfry314@gmail.com
copyright:           2017 Vonfry
category:            CLI
build-type:          Simple
cabal-version:       >=1.10
extra-source-files:  README.md

data-dir: static
data-files: zy.yml

executable yiyd
  hs-source-dirs:      src
  main-is:             Main.hs
  default-language:    Haskell2010
  default-extensions:  LambdaCase
                    ,  MultiWayIf
                    ,  OverloadedStrings
  build-depends:       base >= 4.7 && < 5
                    ,  yaml
                    ,  optparse-applicative
                    ,  ZY.Divination

test-suite test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base >=4.7 && < 5
                    ,  yaml
                    ,  optparse-applicative
                    ,  hspec
                    ,  ZY.Divination
  default-extensions:  LambdaCase
                    ,  MultiWayIf
                    ,  OverloadedStrings
  ghc-options:         -Wall, -DDEBUG
